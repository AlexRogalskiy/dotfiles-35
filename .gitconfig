[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    pr = pull --rebase origin master
    ps = push
    st = status
    co = checkout
    cb = checkout -b
    br = branch
    cm = commit -m
    d = diff
    ds = diff --staged
    dc = diff --cached
