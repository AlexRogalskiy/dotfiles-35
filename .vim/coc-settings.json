{
    "suggest.enablePreview": true,
    "suggest.triggerAfterInsertEnter": true,
    "diagnostic.level": "information",
    "tsserver.trace.server": "verbose",
    "coc.preferences.jumpCommand": "CocVSplitIfNotOpen",
    "coc.preferences.formatOnSaveFiletypes": [
        "go",
        "python",
        "jsonc",
        "json"
    ],
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "~/.local/bin/flake8",
    "python.linting.flake8Args": [
        "--ignore=E501,E266"
    ],
    "explorer.icon.enableNerdfont": true,
    "explorer.file.showHiddenFiles": true,
    "explorer.floating.border.enable": false,
    "explorer.keyMappings.global": {
        "s": "open:split",
        "v": "open:vsplit",
        "<c-s>": "open:split",
        "<c-v>": "open:vsplit",
        "d": "delete",
        "<c-h>": "preview:labeling",
        "<c-o>": ""
    },
    "explorer.previewAction.onHover": false,
    "git.removedSign.text": "-",
    "yaml.schemas": {
        "chart/values.schema.json": "values*.yaml"
    },
    "json.format.enable": true,
    "coc.preferences.extensionUpdateCheck": "daily"
}
